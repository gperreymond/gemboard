{
  "name": "gemboard",
  "version": "1.0.0",
  "description": "A gems boardgame based on react and pixi",
  "proxy": "http://localhost:4000",
  "scripts": {
    "start": "react-scripts start",
    "start:server": "NODE_ENV=development node_modules/.bin/nodemon --config nodemon.json server",
    "test": "make tests",
    "test:standard": "node_modules/.bin/standard --verbose | snazzy",
    "test:unit": "NODE_ENV=test node_modules/.bin/_mocha --recursive test/unit",
    "test:coverage": "node_modules/.bin/nyc --reporter=lcov --reporter=text node_modules/.bin/mocha --opts .mocharc",
    "coverage:publish": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "build": "react-scripts build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gperreymond/gemboard.git"
  },
  "author": "Gilles Perreymond",
  "bugs": {
    "url": "https://github.com/gperreymond/gemboard/issues"
  },
  "homepage": "https://github.com/gperreymond/gemboard#readme",
  "dependencies": {
    "bluebird": "3.5.0",
    "boom": "5.2.0",
    "debug": "3.0.1",
    "eraro": "0.4.1",
    "glob": "7.1.2",
    "hapi": "16.5.2",
    "inert": "4.2.1",
    "lodash.camelcase": "4.3.0",
    "lodash.clone": "4.5.0",
    "lodash.findindex": "4.6.0",
    "lodash.remove": "4.7.0",
    "lodash.shuffle": "4.2.0",
    "supports-color": "4.4.0",
    "uuid": "3.1.0",
    "yamljs": "0.3.0"
  },
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-preset-es2015": "6.24.1",
    "canvas-mock": "0.0.0",
    "chai": "4.1.2",
    "coveralls": "2.13.1",
    "eslint-config-standard": "10.2.1",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-node": "5.1.1",
    "eslint-plugin-promise": "3.5.0",
    "eslint-plugin-standard": "3.0.1",
    "event-emitter": "0.3.5",
    "fpsmeter": "0.3.1",
    "jsdom": "11.2.0",
    "jsdom-global": "3.0.2",
    "mocha": "3.5.0",
    "mocha-standard": "1.0.0",
    "nconf": "0.8.4",
    "nodemon": "1.12.0",
    "normalize.css": "7.0.0",
    "nyc": "11.2.1",
    "pixi-action": "1.0.2",
    "pixi-filters": "2.0.1",
    "pixi-particles": "2.1.5",
    "pixi-sound": "1.4.2",
    "pixi.js": "4.5.5",
    "prop-types": "15.5.10",
    "react": "15.6.1",
    "react-dom": "15.6.1",
    "react-router-dom": "4.2.2",
    "react-scripts": "1.0.13",
    "reflux": "6.4.1",
    "request": "2.81.0",
    "request-promise": "4.2.1",
    "rewire": "2.5.2",
    "snazzy": "7.0.0",
    "standard": "10.0.3"
  },
  "standard": {
    "globals": [
      "requestAnimationFrame",
      "before",
      "after",
      "describe",
      "it",
      "expect"
    ],
    "ignore": [
      "build/**",
      "coverage/**",
      "data/**",
      "public/**"
    ]
  }
}
